<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity">

  <ScrollView
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <ImageView
          android:id="@+id/iv_home_banner"
          android:layout_width="0dp"
          android:layout_height="260dp"
          android:scaleType="fitXY"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:srcCompat="@drawable/bg_home" />

      <ImageView
          android:id="@+id/iv_logout"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_marginTop="16dp"
          android:layout_marginEnd="16dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:srcCompat="@drawable/ic_logout" />

      <ImageView
          android:id="@+id/ibtn_map"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          app:layout_constraintEnd_toStartOf="@+id/ibtn_news"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/iv_home_banner"
          app:srcCompat="@drawable/btn_home_map" />

      <TextView
          android:id="@+id/tv_map"
          style="@style/BlackTextStyle.Size16"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/label_map"
          app:layout_constraintEnd_toEndOf="@+id/ibtn_map"
          app:layout_constraintStart_toStartOf="@+id/ibtn_map"
          app:layout_constraintTop_toBottomOf="@+id/ibtn_map" />

      <ImageView
          android:id="@+id/ibtn_news"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintBottom_toBottomOf="@+id/ibtn_map"
          app:layout_constraintEnd_toStartOf="@+id/ibtn_meter"
          app:layout_constraintStart_toEndOf="@+id/ibtn_map"
          app:layout_constraintTop_toTopOf="@+id/ibtn_map"
          app:layout_constraintVertical_bias="0.0"
          app:srcCompat="@drawable/btn_home_news" />

      <TextView
          android:id="@+id/tv_news"
          style="@style/BlackTextStyle.Size16"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/label_news"
          app:layout_constraintEnd_toEndOf="@+id/ibtn_news"
          app:layout_constraintStart_toStartOf="@+id/ibtn_news"
          app:layout_constraintTop_toBottomOf="@+id/ibtn_news" />

      <ImageView
          android:id="@+id/ibtn_meter"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintBottom_toBottomOf="@+id/ibtn_news"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@+id/ibtn_news"
          app:layout_constraintTop_toTopOf="@+id/ibtn_news"
          app:srcCompat="@drawable/btn_home_meter" />

      <TextView
          android:id="@+id/tv_meter"
          style="@style/BlackTextStyle.Size16"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/label_meter"
          app:layout_constraintEnd_toEndOf="@+id/ibtn_meter"
          app:layout_constraintStart_toStartOf="@+id/ibtn_meter"
          app:layout_constraintTop_toBottomOf="@+id/ibtn_meter" />

      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/cl_take_test"
          android:layout_width="0dp"
          android:layout_height="165dp"
          android:layout_marginStart="20dp"
          android:layout_marginTop="32dp"
          android:layout_marginEnd="4dp"
          android:background="@drawable/img_home_rectangle_one"
          app:layout_constraintEnd_toStartOf="@+id/cl_previous_results"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/tv_map">

        <TextView
            android:id="@+id/tv_rest_title"
            style="@style/BlackTextStyle.Size14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="@string/label_take_test"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_rest_desc"
            style="@style/LightBlackTextStyle.Size13"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_white_red_stroke_corner_round"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/label_rest_desc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
      </androidx.constraintlayout.widget.ConstraintLayout>

      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/cl_previous_results"
          android:layout_width="0dp"
          android:layout_height="165dp"
          android:layout_marginStart="4dp"
          android:layout_marginEnd="20dp"
          android:background="@drawable/img_home_rectangle_two"
          app:layout_constraintBottom_toBottomOf="@+id/cl_take_test"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@+id/cl_take_test"
          app:layout_constraintTop_toTopOf="@+id/cl_take_test" >

        <TextView
            android:id="@+id/tv_result_title"
            style="@style/BlackTextStyle.Size14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="@string/label_view_results"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_result_desc"
            style="@style/LightBlackTextStyle.Size13"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_white_blue_stroke_corner_round"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/label_result_desc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
      </androidx.constraintlayout.widget.ConstraintLayout>

      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/cl_user_manual"
          android:layout_width="0dp"
          android:layout_height="120dp"
          android:layout_marginTop="16dp"
          android:layout_marginBottom="16dp"
          android:background="@color/colorDish"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toStartOf="@+id/iv_how_to"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/cl_take_test">

        <TextView
            android:id="@+id/tv_user_manual"
            style="@style/BlackTextStyle.Size14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/label_user_manual"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_user_manual"
            app:layout_constraintStart_toStartOf="@+id/tv_user_manual"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_manual"
            app:srcCompat="@drawable/ic_home_user_manual" />
      </androidx.constraintlayout.widget.ConstraintLayout>

      <ImageView
          android:id="@+id/iv_how_to"
          android:layout_width="0dp"
          android:layout_height="120dp"
          android:scaleType="fitXY"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@+id/cl_user_manual"
          app:layout_constraintTop_toTopOf="@+id/cl_user_manual"
          app:srcCompat="@drawable/img_home_rectangle_three" />

    </androidx.constraintlayout.widget.ConstraintLayout>
  </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>